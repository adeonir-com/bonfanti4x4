# Ignore all files starting with .
.*

# Ignore OS generated files
Thumbs.db

# Ignore everything in the root except the "wp-content" directory.
/*
!wp-content

# Ignore everything in the "wp-content" directory,
# except the "plugins" and "themes" directories.
wp-content/*
!wp-content/plugins/
!wp-content/themes/

# Ignore everything in the "plugins" directory,
# except the plugins you specify.
wp-content/plugins/*
!wp-content/plugins/*.zip

# Ignore everything in the "themes" directory,
# except the themes you specify.
wp-content/themes/*
!wp-content/themes/simple

# Whitelist project files.
!.gitignore
!.gitlab-ci.yml
!.editorconfig
!docker-compose.yml
!readme.md
!src
!gulpfile.js
!package.json

# Ignore node dependency directories.
node_modules
